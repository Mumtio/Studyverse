<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="160.0" prefWidth="360.0"
            style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 10; -fx-padding: 10;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.controller.courseCardController">

   <children>
      <VBox fx:id="contentBox" spacing="10" fillWidth="true" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
         <Label fx:id="titleLabel" style="-fx-font-weight: bold; -fx-font-size: 16px;" wrapText="true"/>
         <Label fx:id="descLabel" wrapText="true"/>

         <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="removeButton" text="Remove" visible="false" managed="false"/>
            <Pane HBox.hgrow="ALWAYS"/> <!-- pushes next buttons to the right -->
            <Button fx:id="detailsButton" text="Details" visible="false" managed="false"/>
            <Button fx:id="enrollButton" text="Enroll" visible="false" managed="false"/>
         </HBox>
      </VBox>
   </children>
</AnchorPane>
